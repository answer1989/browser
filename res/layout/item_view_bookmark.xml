<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginRight="@dimen/margin_10"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/button_delete_bookmark"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/item_view_bookmark_title_text_size" />

    <TextView
        android:id="@+id/text_view_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_title"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_toLeftOf="@+id/button_delete_bookmark"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_view_bookmark_website_text_size" />

    <Button
        android:id="@+id/button_delete_bookmark"
        android:layout_width="@dimen/delete_icon_size"
        android:layout_height="@dimen/delete_icon_size"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_delete"/>

</RelativeLayout>