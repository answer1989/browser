<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@android:color/white" 
     >

    <TextView
        android:id="@+id/text_view_tab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_toLeftOf="@+id/button_close_tab"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_view_tab_title_text_size" />

    <TextView
        android:id="@+id/text_view_tab_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_view_tab_name"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_toLeftOf="@+id/button_close_tab"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_view_tab_website_text_size" />

    <Button
        android:id="@+id/button_close_tab"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:background="@drawable/ic_close" />

</RelativeLayout>