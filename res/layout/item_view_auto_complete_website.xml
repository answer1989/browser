<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_10" >

    <TextView
        android:id="@+id/text_view_auto_complete_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_toLeftOf="@+id/button_done"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_20" />

    <Button
        android:id="@+id/button_done"
        android:layout_width="@dimen/icon_done_size"
        android:layout_height="@dimen/icon_done_size"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_arrow_top_left"
        android:focusable="false" />

</RelativeLayout>