<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/list_view_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_layout_add_tab_container"
        android:layout_marginTop="@dimen/margin_60"
        android:background="@android:color/white"
        android:divider="@color/color_gray"
        android:dividerHeight="@dimen/divider_height" />

    <View
        android:id="@+id/view_divider_bottom"
        android:layout_above="@+id/linear_layout_add_tab_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_gray" />

    <LinearLayout
        android:id="@+id/linear_layout_add_tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_5" 
        android:paddingBottom="@dimen/padding_5"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_add_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:background="@drawable/button_round_conner"
            android:drawableLeft="@drawable/ic_add_new_tab"
            android:text="@string/new_tab" />
    </LinearLayout>

</RelativeLayout>